[Unit]
Description=MQTTscripts

[Service]
TimeoutStartSec=0
ExecStartPre=/bin/bash -c "source /opt/mqttScripts/venv/bin/activate/; /opt/mqttScripts/data/update.sh"
ExecStart=/bin/bash -c "source /opt/mqttScripts/venv/bin/activate/; /opt/mqttScripts/data/Launcher.py --systemd --config /opt/mqttScripts/config/mqttra.config"
TimeoutStopSec=10s
Restart=always
Type=idle
User=%i
WorkingDirectory=/opt/mqttScripts/config

[Install]
WantedBy=multi-user.target

